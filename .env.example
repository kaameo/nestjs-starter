# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=nestjs_starter

# JWT
JWT_SECRET=your-access-secret-min-32-chars-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars-change-in-production
JWT_REFRESH_EXPIRATION=7d

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Mail (SMTP)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM=noreply@nestjs-starter.local
MAIL_VERIFICATION_URL=http://localhost:3000/api/v1/auth/verify-email

# Redis (Production only)
REDIS_HOST=localhost
REDIS_PORT=6379

# Metrics
METRICS_ENABLED=true
METRICS_PREFIX=nestjs_

# Logging
LOG_LEVEL=info
